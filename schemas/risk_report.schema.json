{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RiskReport",
  "type": "object",
  "required": [
    "risk_report_version",
    "risk_state",
    "permission",
    "recommended_scale",
    "reasons",
    "thresholds",
    "metrics",
    "evaluated_at"
  ],
  "properties": {
    "risk_report_version": { "type": "integer" },
    "run_id": { "type": ["string", "null"] },
    "workspace": { "type": ["string", "null"] },
    "symbol": { "type": ["string", "null"] },
    "timeframe": { "type": ["string", "null"] },
    "start_ts": { "type": ["string", "null"] },
    "end_ts": { "type": ["string", "null"] },
    "evaluated_at": { "type": ["string", "null"] },
    "risk_state": { "type": "string" },
    "permission": { "type": "string" },
    "recommended_scale": { "type": "number" },
    "reasons": {
      "type": "array",
      "items": { "type": "string" }
    },
    "thresholds": { "type": "object" },
    "metrics": {
      "type": "object",
      "required": ["atr_pct", "realized_vol", "missing_fraction", "thresholds"],
      "properties": {
        "atr_pct": { "type": ["number", "null"] },
        "realized_vol": { "type": ["number", "null"] },
        "missing_fraction": { "type": "number" },
        "as_of": { "type": ["string", "null"] },
        "thresholds": { "type": "object" }
      }
    },
    "config": { "type": "object" }
  }
}
