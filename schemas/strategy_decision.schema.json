{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "StrategyDecision",
  "type": "object",
  "required": [
    "schema_version",
    "as_of_utc",
    "instrument",
    "action",
    "rationale",
    "risk",
    "provenance"
  ],
  "properties": {
    "schema_version": { "const": 1 },
    "as_of_utc": { "type": "string" },
    "instrument": { "type": "string" },
    "action": {
      "type": "string",
      "enum": ["HOLD", "ENTER_LONG", "EXIT_LONG", "ENTER_SHORT", "EXIT_SHORT"]
    },
    "rationale": { "type": "array", "items": { "type": "string" } },
    "risk": {
      "type": "object",
      "required": ["max_position_size", "stop_loss", "take_profit"],
      "properties": {
        "max_position_size": { "type": "number", "exclusiveMinimum": 0 },
        "stop_loss": { "type": "number", "exclusiveMinimum": 0 },
        "take_profit": { "type": "number", "exclusiveMinimum": 0 },
        "policy_ref": { "type": "string" }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["feature_bundle_fingerprint", "strategy_id", "strategy_params_hash"],
      "properties": {
        "feature_bundle_fingerprint": { "type": "string" },
        "strategy_id": { "type": "string" },
        "strategy_params_hash": { "type": "string" }
      }
    },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
  }
}
